    <%= form.label :Begin_Date %><br>
    <%= form.date_field :begindate %>
  </p>

  <p>
    <%= form.label :Disaster_Type %><br>
    <%= form.select(:disaster_type, [['Hurricane', 'Hurricane'],['Tornado', 'Tornado'],['Earthquake', 'Earthquake'],['Tsunami', 'Tsunami'], ['Drought', 'Drought'], ['Fires', 'Fires']] ) %>
