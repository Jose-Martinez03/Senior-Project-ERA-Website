        <% @disasterevent.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :Disaster_Name %><br>
    <%= form.text_field :name %>
